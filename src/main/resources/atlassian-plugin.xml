<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <postChainAction key="myPostChainAction" class="com.github.hrhdaniel.buildlights.bamboo.actions.BuildLightsPostChain">
        <description>Sends plan status to build light tracker</description>
    </postChainAction>

    <component-import key="variableDefinitionManager" name="VariableDefinitionManager"
		interface="com.atlassian.bamboo.variable.VariableDefinitionManager">
		<description>VariableDefinitionManager</description>
	</component-import>

        <!-- Listeners -->
    <bambooEventListener name="Build Lights Update" key="build-lights-deployment-updater" class="com.github.hrhdaniel.buildlights.bamboo.listeners.BuildLightsDeploymentEvent"/>

</atlassian-plugin>
